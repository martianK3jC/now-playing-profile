{
  "compilerOptions": {
    "target": "ES2020",                   // Modern JS target
    "module": "ESNext",                   // Keep ES modules for Node
    "moduleResolution": "Node",
    "jsx": "react-jsx",                   // or "react" if using React 16
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist"                       // optional, for compiled output
  },
  "include": ["api/**/*", "components/**/*", "utils/**/*"]
}
