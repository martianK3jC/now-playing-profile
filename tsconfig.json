{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["DOM", "ESNext"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["api/**/*", "components/**/*", "utils/**/*", "types/**/*"]
}